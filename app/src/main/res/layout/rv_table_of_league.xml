<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="5dp"
        app:cardElevation="3dp"
        android:layout_margin="4dp"
        app:cardBackgroundColor="@color/white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="13">
    <TextView
        android:id="@+id/tableTeamArrange"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_marginStart="4dp"
        android:textColor="@color/darkGreen"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/tableTeamName"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_weight="4"
        android:layout_marginEnd="4dp"
        android:textColor="@color/red"/>
    <TextView
        android:id="@+id/TeamPlayed"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"/>

    <TextView
        android:id="@+id/TeamWin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"/>
    <TextView
        android:id="@+id/TeamDraw"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight=".75"
        android:gravity="center_horizontal"/>
    <TextView
        android:id="@+id/TeamLoss"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight=".75"
        android:gravity="center_horizontal"/>

    <TextView
        android:id="@+id/TeamGoals"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.5"
        android:gravity="center_horizontal"/>
    <TextView
        android:id="@+id/TeamGoalsAgainst"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"/>
    <TextView
        android:id="@+id/TeamGoalsDifference"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"/>
     <TextView
         android:id="@+id/TeamPoints"
         android:layout_width="0dp"
         android:layout_height="wrap_content"
         android:layout_weight="1"
         android:textColor="@color/red"
         android:layout_marginEnd="3dp"
         android:gravity="center_horizontal"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>